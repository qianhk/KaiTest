<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >

    <item android:id="@android:id/background">
        <shape android:shape="rectangle" >
            <corners android:radius="5dp" />

            <gradient
                android:angle="270"
                android:endColor="@color/seek_bar_background"
                android:startColor="@color/seek_bar_background" />
        </shape>
    </item>
    <item android:id="@android:id/secondaryProgress">
        <clip>
            <shape android:shape="rectangle" >
                <corners android:radius="5dp" />

                <gradient
                        android:angle="270"
                        android:endColor="@color/seek_bar_second_progress"
                        android:startColor="@color/seek_bar_second_progress" />
            </shape>
        </clip>
    </item>
    <item android:id="@android:id/progress">
        <clip>
            <shape android:shape="rectangle" >
                <corners android:radius="5dp" />

                <gradient
                        android:angle="270"
                        android:endColor="@color/seek_bar_progress"
                        android:startColor="@color/seek_bar_progress" />
            </shape>
        </clip>
    </item>

</layer-list>