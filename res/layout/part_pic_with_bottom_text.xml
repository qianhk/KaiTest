<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

    <com.njnu.kai.test.grid.SquareImageView
            android:id="@+id/iv_pic"
            android:background="#5000FFFF"
            android:layout_width="match_parent"
            android:layout_height="80dp"/>

    <TextView
            android:id="@+id/tv_first_publish"
            android:layout_alignBottom="@id/iv_pic"
            android:layout_width="fill_parent"
            android:background="#80FF0000"
            android:layout_alignLeft="@id/iv_pic"
            android:layout_alignRight="@id/iv_pic"
            android:layout_height="wrap_content"
            android:textColor="#FFFFFF"
            android:gravity="right|center_vertical"
            android:text="首发"/>

    <TextView
            android:id="@+id/tv_title"
            android:layout_width="fill_parent"
            android:layout_alignLeft="@id/iv_pic"
            android:layout_alignRight="@id/iv_pic"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:textColor="#0000FF"
            android:singleLine="true"
            android:layout_below="@id/iv_pic"
            android:text="凯凯首发标题"/>
</RelativeLayout>